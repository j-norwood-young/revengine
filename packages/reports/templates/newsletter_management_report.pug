    h1 RevEngine Newsletter Management Report - #{moment().format("D MMMM YYYY")}
    table#someID.report_table.some-class
        tr
            th(rowspan=2) List
            th(rowspan=2) Subs
            th(colspan=3) Last 7 Days
            th(colspan=3) Last 30 Days
        tr
            th Joins
            th Unsubs
            th Bounced

