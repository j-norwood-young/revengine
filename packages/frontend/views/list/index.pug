extends ../layout

block content
    .container
        .container-flex
            .d-md-flex
                .flex-grow-1
                    h2= title
                    #countContainer.mb-3(style="opacity: 0")
                        #count No #{ title } found
                .input-group.col-md-3.col-sm-6.col-xs-12
                    input#search_string.form-control(type="search")
                    .input-group-append.mb-5
                        button#btn_search.btn.btn-primary(type="button")
                            i.fal.fa-search
                div
                    a.btn.btn-success(href="/item/add/"+type)
                        i.fal.fa-plus
            .d-md-flex.mb-4
                .flex-grow-1#listActions
            .d-md-flex.mb-4
                .flex-grow-1#listFilters
            .col-sm-1
                .spinner-border.spinner-action.hide(role="status")
                    span.sr-only Loading...
            table#listTable.table.table-striped(data-type=type)

