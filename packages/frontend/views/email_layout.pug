doctype html
html
    head
        meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1")
        meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
        title= title
        style(type="text/css").
            img,a img{
                border:0;
                outline:none;
                text-decoration:none;
            }
            h1,h2,h3,h4,h5,h6{
                margin:0;
                padding:0;
            }
            p{
                margin:1em 0;
                padding:0;
            }
            a{
                word-wrap:break-word;
            }
            table {
               border-collapse: collapse;
               font-size: 12px;
            }
            table thead th {
                vertical-align: bottom;
                border: 2px solid #dee2e6;
            }
            table tbody td {
                border: 1px solid #dee2e6;
                padding: 2px 5px;
            }
            img{
                -ms-interpolation-mode:bicubic;
                max-width: 100% !important;
            }
            body,table,td,p,a,li,blockquote{
                -ms-text-size-adjust:100%;
                -webkit-text-size-adjust:100%;
            }
            h1{
                font-size: 3.4em;
                font-weight: 300;
                letter-spacing: .2px;
                font-family: georgia,serif;
                line-height: 110%;
                color: #000;
                margin: 20px 0px;
            }
            h2{
                font-weight: 300;
                letter-spacing: .2px;
                font-family: georgia,serif;
                font-size: 21px;
                line-height: 23px;
                color: #000;
                margin: 20px 0px;
                text-decoration: underline;
            }
            h3{
                font-weight: 100;
                letter-spacing: .2px;
                font-family: georgia,serif;
                font-size: 18px;
                line-height: 110%;
                color: #000;
                margin: 20px 0px;
            }
            h4{
                color:#808080 !important;
                display:block;
                font-family:Helvetica;
                font-size:16px;
                font-style:normal;
                font-weight:bold;
                line-height:125%;
                letter-spacing:normal;
                margin:0;
                text-align:left;
            }
            body {
                margin: 0;
                -ms-text-size-adjust: 100%;
                -webkit-text-size-adjust: 100%;
                background-color: #f0f0f0;
                height: 100% !important;
                width: 100% !important;
                font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
            }

            p {
                color: #606060;
                font-family: Helvetica, Arial, sans-serif;
            }

            a {
                color: #ea5b3a !important;
                text-decoration: underline !important;
            }

            #header {
                font-family: Helvetica, Arial, sans-serif;
                color: #413939;
                border-bottom: 1px #dddddd solid;
                padding-bottom: 20px;
            }

            #header h1 {
                margin: 0;
                padding: 0;
                display: block;
                font-family:  Georgia, serif;
                font-size: 40px;
                font-style: normal;
                font-weight: bold;
                line-height: 125%;
                letter-spacing: -1px;
                text-align: left;
                color: #ea5b3a;
                margin: 10px 0px;
            }

            #container {
                max-width: 600px;
                margin: 0px auto;
                background-color: #ffffff;
                padding: 10px 30px;
            }

            @media only screen and (max-width: 480px){
                #container {
                    max-width: 300px;
                }
            }

            #intro {
                border-bottom: 1px #dddddd solid;
                padding-bottom: 20px;
            }
            
            #intro p {
                font-size: 15px !important;
                line-height: 150% !imporatnt;
            }

            #sponsors {
                border-bottom: 1px #dddddd solid;
                padding-bottom: 20px;
                padding-top: 20px;
            }

            #sponsors h3 {
                font-weight: normal;
                margin-bottom: 10px;
                text-decoration: underline;
            }

            #sponsors a img {
                max-height: 50px;
                
            }

            #main {
                border-bottom: 1px #dddddd solid;
                padding-bottom: 20px;
            }

            #main p {
                font-family: 'Merriweather', Georgia, 'Times New Roman', serif;
                font-size: 14px;
                line-height: 150%;
            }

            #footer {
                padding-top: 30px;
            }

            #footer h3 {
                font-size: 16px;
                text-decoration: underline;
            }
            .badge {
                display: inline-block;
                padding: 0.25em 0.4em;
                font-size: 75%;
                font-weight: 700;
                line-height: 1;
                text-align: center;
                white-space: nowrap;
                vertical-align: baseline;
                border-radius: 0.25rem;
            }
            .badge-secondary {
                color: #fff;
                background-color: #5A6169;
            }
            .badge-success {
                color: #fff;
                background-color: #17c671;
            }
            .mr-1, .mx-1 {
                margin-right: 0.25rem !important;
            }
            .badge-primary {
                color: #fff;
                background-color: #4da3ff;
            }
            .revengine-width-700 {
                width: 700px;
            }
            .ml-2, .mx-2 {
                margin-left: 0.5rem !important;
            }
            .mr-2, .mx-2 {
                margin-right: 0.5rem !important;
            }
            .float-left {
                float: left !important;
            }
            .img-thumbnail {
                padding: 0.25rem;
                background-color: #f8f8f8;
                border: 1px solid #dee2e6;
                border-radius: 0.25rem;
                max-width: 100%;
                height: auto;
            }
            table {
                background-color: #fff;
            }
        link(href="https://fonts.googleapis.com/css?family=Merriweather:400,400i,700,700i" rel="stylesheet")
    body(leftmargin="0" marginwidth="0" topmargin="0" marginheight="0" offset="0")
        #container
            img(src="https://www.dailymaverick.co.za/wp-content/themes/twentyseventeen-child/images/dm-masthead-4.png" style="width:100%")
            block content
        block scripts