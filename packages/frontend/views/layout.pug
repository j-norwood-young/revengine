doctype html
html
	head
		title= title
		link(rel='stylesheet', href='/stylesheets/style.css')
		link(rel="icon" type="image/png" href="/images/favicon.png")
		script(src="https://kit.fontawesome.com/71ea3a5816.js" crossorigin="anonymous")
		if apikey && apiserver
			script.
				var apikey = "#{apikey}";
				var apiserver = "#{apiserver}";
				var daemonserver = "#{daemonserver}";
				var pipelineserver = "#{pipelineserver}";
		script(src="/javascripts/main.bundle.js")
	body
		include navbar
		.container-fluid
			.row
				include sidebar
				main.col-md-9.ml-sm-auto.col-lg-10.px-md-4.pt-3(role="main")
					include message
					block content
		block scripts
