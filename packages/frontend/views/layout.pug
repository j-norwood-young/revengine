doctype html
html
	head
		title= title
		if (dev)
			link(rel='stylesheet', href='/assets/revengine.css')
		else 
			link(rel='stylesheet', href='/assets/revengine.min.css')
		block styles
		link(rel="icon" type="image/png" href="/images/favicon.png")
		script(src="https://kit.fontawesome.com/71ea3a5816.js" crossorigin="anonymous")
		if apikey && apiserver
			script.
				var user_id = "#{user.data._id}";
				var apikey = "#{apikey}";
				var apiserver = "#{apiserver}";
				var daemonserver = "#{daemonserver}";
				var pipelineserver = "#{pipelineserver}";
		if (dev)
			script(src="/assets/revengine.js")
		else
			script(src="/assets/revengine.min.js")
	body
		include navbar
		.container-fluid
			.row
				include sidebar
				main.col-md-9.ml-sm-auto.col-lg-10.px-md-4.pt-3(role="main")
					include message
					block content
		block scripts
