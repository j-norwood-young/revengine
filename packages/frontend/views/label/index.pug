extends ../layout

block content
    .container
        h1 Labels and Segments
        .row.row-cols-1.row-cols-sm-2.row-cols-md-3.g-3
            .col
                .card.shadow-sm
                    .card-header 
                        h2 
                            i.fa.fa-envelope
                            |  Labels
                    .card-body
                        .d-flex.justify-content-between.align-items-center
                            .btn-group 
                                a.btn.btn-small.btn-outline-secondary(href="/list/label") List Labels
                                a.btn.btn-small.btn-outline-secondary(href="/item/add/label") Add Label
            .col
                .card.shadow-sm
                    .card-header 
                        h2 
                            i.fa.fa-envelope
                            |  Segments
                    .card-body
                        .d-flex.justify-content-between.align-items-center
                            .btn-group 
                                a.btn.btn-small.btn-outline-secondary(href="/list/segmentation") List Segments
                                a.btn.btn-small.btn-outline-secondary(href="/segmentation/add") Add Segment