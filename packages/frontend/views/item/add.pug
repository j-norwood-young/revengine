extends ../layout

block content
    .container
        form(method="POST" autocomplete="off")
            input(type="hidden" name="__save" value="true")
            .container
                .d-md-flex
                    .flex-grow-1
                        h2= title
                    div
                        button.btn.btn-success(type="submit")
                            i.fal.fa-save
                if collection.note
                    .alert.alert-primary
                        h4 Note
                        p= collection.note
                each field in collection.fields
                    include ./field