extends ../layout

block content
    .container
        h1 Reports
        .row.row-cols-1.row-cols-sm-2.row-cols-md-3.g-3
            .col
                .card.shadow-sm
                    .card-header 
                        h2 
                            i.fa.fa-envelope
                            |  Newsletter Subscribers
                    .card-body
                        .d-flex.justify-content-between.align-items-center
                            .btn-group 
                                a.btn.btn-small.btn-outline-secondary(href="/report/newsletter_subscribers") Newsletter Subscribers
            .col
                .card.shadow-sm
                    .card-header 
                        h2 
                            i.fa.fa-envelope
                            |  Reader Facet
                    .card-body
                        .d-flex.justify-content-between.align-items-center
                            .btn-group 
                                a.btn.btn-small.btn-outline-secondary(href="/reader/facet") Reader Facet
            .col
                .card.shadow-sm
                    .card-header 
                        h2 
                            i.fa.fa-envelope
                            |  Mailed Reports
                    .card-body
                        .d-flex.justify-content-between.align-items-center
                            .btn-group 
                                a.btn.btn-small.btn-outline-secondary(href="/report/mail_report/website_content_report") Website Content Report
                                a.btn.btn-small.btn-outline-secondary(href="/report/mail_report/newsletter_management_report") Newsletter Management Report
                                a.btn.btn-small.btn-outline-secondary(href="/report/mail_report/newsletter_content_report") Newsletter Content Report