extends ../layout

block content
    .container
        h1 Touchbase Lists 
        h4 Create a new list
        form(method="post")
            .form-group 
                label.form-label New list name
                input.form-control(name="new_list_name")
                input.btn.btn-primary.mt-2(type="submit", value="Submit")
        hr
        h4 Add to an existing list
        form(method="post")
            .form-group
                each list in touchbase_lists
                    .form-check
                        input.form-check-input(type="radio", name="touchbase_list" value=list.ListID)
                        label.form-check-label= list.Name
                input.btn.btn-primary.mt-2(type="submit", value="Submit")