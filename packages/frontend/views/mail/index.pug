extends ../layout

block content
    .container
        h1 Mails
        .row.row-cols-1.row-cols-sm-2.row-cols-md-3.g-3
            .col
                .card.shadow-sm
                    .card-header 
                        h2 
                            i.fa.fa-envelope
                            |  Individual Mails
                    .card-body
                        //- p.card-text This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.
                        .d-flex.justify-content-between.align-items-center
                            .btn-group 
                                a.btn.btn-small.btn-outline-secondary(href="/mails/individual") Send Individual Mail
                            //-     small.text-muted 9 mins
            .col
                .card.shadow-sm
                    .card-header 
                        h2 
                            i.fa.fa-mail-bulk
                            |  Group Mails
                    .card-body
                        .d-flex.justify-content-between.align-items-center
                            .btn-group 
                                a.btn.btn-small.btn-outline-secondary(href="/mails/group") Send Group Mails
                                a.btn.btn-small.btn-outline-secondary(href="/list/mailrun") List Mailruns
            .col
                .card.shadow-sm
                    .card-header 
                        h2 
                            i.fa.fa-envelope
                            |  Report Mails
                    .card-body
                        .d-flex.justify-content-between.align-items-center
                            .btn-group 
                                a.btn.btn-small.btn-outline-secondary(href="/list/mailer") Mailers
            .col
                .card.shadow-sm
                    .card-header 
                        h2 
                            i.fa.fa-envelope
                            |  Mailing Lists
                    .card-body
                        .d-flex.justify-content-between.align-items-center
                            .btn-group 
                                a.btn.btn-small.btn-outline-secondary(href="/mails/mailinglist/create") Create Mailing List
                                a.btn.btn-small.btn-outline-secondary(href="/mails/mailinglist/list") Show Mailing Lists