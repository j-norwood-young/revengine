extends ../layout

block content
    .container
        h2 Send Test Mail
        form(action="/mailer/individual", method="post")
            .form-group
                label(for="reader_email") Reader
                input#valid_to.form-control.email_typeahead(type="email", name="reader_email")
            .form-group 
                label(for=transactional_id) Transactional Mail
                select.form-control(name="transactional_id")
                    for transactional_name in transactional_names
                        option(value=transactional_name)= transactional_name
            .form-group
                label(for="to") Override To (eg. for testing)
                input#to.form-control(type="email", name="to")
            .form-group.mt-3
                input.btn.btn-primary(type="submit", value="Submit")
                
