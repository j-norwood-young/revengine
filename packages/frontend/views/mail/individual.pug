extends ../layout

block content
    .container
        h2 Send Individual Mail
        form(action="/mailer/individual", method="post")
            .form-group
                label(for="reader_email") Reader
                input#valid_to.form-control.email_typeahead(type="email", name="reader_email")
            .form-group 
                label(for=touchbasetransactional) Transactional Mail
                select.form-control(name="touchbasetransactional")
                    for touchbasetransactional in touchbasetransactionals
                        option(value=touchbasetransactional._id)= touchbasetransactional.name
            .form-group
                label(for="to") Override To (eg. for testing)
                input#to.form-control(type="email", name="to")
            .form-group.mt-3
                input.btn.btn-primary(type="submit", value="Submit")
                
