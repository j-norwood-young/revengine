doctype html
html
    head
        title= title
        if (dev)
            link(rel='stylesheet' href='/assets/revengine.css')
        else 
            link(rel='stylesheet' href='/assets/revengine.min.css')
    body
        .container
            h1= sitename
            h5 Forgot your password?
            if msg
                .alert.alert-warning
                    = msg
            form(method="POST").card.mt-5.mb-5
                input(type="hidden" name="forgot" value="1")
                .card-body
                    .form-group
                        label(for="email") Email
                        input(type="email" name="email").form-control
                .card-footer
                    .form-group
                        input(type="submit" value="Submit").btn.btn-primary