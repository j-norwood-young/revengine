doctype html
html
    head
        title= title
        link(rel='stylesheet', href='/stylesheets/style.css')
        script(src="/javascripts/main.bundle.js")
    body
        .container
            h1 Maverick Insiders
            h5 Forgot your password?
            if msg
                .alert.alert-warning
                    = msg
            form(method="POST").card.mt-5.mb-5
                input(type="hidden" name="forgot" value="1")
                .card-body
                    .form-group
                        label(for="email") Email
                        input(type="email" name="email").form-control
                .card-footer
                    .form-group
                        input(type="submit" value="Submit").btn.btn-primary