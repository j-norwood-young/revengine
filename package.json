{
  "name": "revengine",
  "private": true,
  "version": "0.0.1",
  "description": "RevEngine is an open source Data Management Platform for news publishers wanting to leverage their reader and content data",
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "lerna run test --stream",
    "consolidator-prod": "env NODE_ENV=production node packages/consolidator",
    "tracker-prod": "env NODE_ENV=production node packages/tracker",
    "consolidator-dev": "env NODE_ENV=development nodemon packages/consolidator",
    "tracker-dev": "env NODE_ENV=development nodemon packages/tracker",
    "publish-all": "lerna publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/j-norwood-young/revengine.git"
  },
  "keywords": [
    "DMP",
    "data"
  ],
  "author": "Jason Norwood-Young <jason@10layer.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/j-norwood-young/revengine/issues"
  },
  "homepage": "https://github.com/j-norwood-young/revengine#readme",
  "devDependencies": {
    "lerna": "^3.21.0"
  }
}
