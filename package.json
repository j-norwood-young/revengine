{
  "name": "revengine",
  "private": true,
  "version": "0.0.2",
  "description": "RevEngine is an open source Data Management Platform for news publishers wanting to leverage their reader and content data",
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "lerna run test --stream",
    "prod:consolidator": "env NODE_ENV=production node packages/consolidator",
    "prod:tracker": "env NODE_ENV=production node packages/tracker",
    "prod:api": "env NODE_ENV=production node packages/api --config packages/api/nodemon.json",
    "prod:frontend": "env NODE_ENV=production node packages/frontend/bin/www",
    "prod:pipeline": "env NODE_ENV=production node packages/pipeline",
    "prod:content_promoter": "env NODE_ENV=production node packages/mailer/wordpress_article_api.js",
    "prod:mailer": "env NODE_ENV=production node packages/mailer",
    "dev-track:consolidator": "env NODE_ENV=development nodemon packages/consolidator",
    "dev-track:tracker": "env NODE_ENV=development nodemon packages/tracker",
    "dev:api": "env NODE_ENV=development nodemon --inspect --verbose --watch packages/api packages/api",
    "dev:content": "env NODE_ENV=development nodemon packages/content",
    "dev:pipeline": "env NODE_ENV=development nodemon packages/pipeline",
    "dev:frontend": "env NODE_ENV=development nodemon --config packages/frontend/nodemon.json packages/frontend/bin/www",
    "dev:mailer": "env NODE_ENV=development nodemon --config packages/mailer/nodemon.json --trace-uncaught packages/mailer",
    "dev:content_promoter": "env NODE_ENV=development nodemon --watch packages/mailer packages/mailer/wordpress_article_api.js",
    "test:pipeline": "env NODE_ENV=test mocha packages/pipeline/test/* --timeout=1000",
    "dev": "npm-run-all -p dev:*",
    "dev-track": "npm-run-all -p dev-track:*",
    "prod": "npm-run-all -p prod:*",
    "publish-all": "lerna publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/j-norwood-young/revengine.git"
  },
  "keywords": [
    "DMP",
    "data"
  ],
  "author": "Jason Norwood-Young <jason@10layer.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/j-norwood-young/revengine/issues"
  },
  "homepage": "https://github.com/j-norwood-young/revengine#readme",
  "devDependencies": {
    "lerna": "^3.21.0"
  }
}
